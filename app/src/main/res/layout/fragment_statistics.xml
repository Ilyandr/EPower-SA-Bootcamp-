<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/mainLinearStatistics">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:id="@+id/btnBack"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:background="@color/prism"
            tools:ignore="NestedWeights,RtlHardcoded,RtlSymmetry" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/main_textStatistics"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingRight="15dp"
            android:background="@color/prism"
            android:layout_weight="1"
            tools:ignore="RtlHardcoded,RtlSymmetry" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:id="@+id/separator1"
        android:background="@color/white"
        tools:ignore="SmallSp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:id="@+id/sensorName"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_weight="2"
            tools:ignore="NestedWeights" />

        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:id="@+id/separator2"
            android:background="@color/white"
            tools:ignore="SmallSp" />

        <TextView
            android:layout_width="0dp"
            android:id="@+id/sensorTime"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <View
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:id="@+id/separator3"
            android:background="@color/white"
            tools:ignore="SmallSp" />

        <TextView
            android:layout_width="0dp"
            android:id="@+id/sensorData"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:id="@+id/separator4"
        android:background="@color/white"
        tools:ignore="SmallSp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/statisticList"
        android:layout_margin="8dp"
        android:divider="@android:color/transparent"
        android:layout_weight="11"/>
</LinearLayout>